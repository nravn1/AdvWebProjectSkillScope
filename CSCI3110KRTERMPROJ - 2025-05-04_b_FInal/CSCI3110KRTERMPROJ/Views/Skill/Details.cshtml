@model CSCI3110KRTERMPROJ.Models.Skill

@{
    ViewData["Title"] = "Details";
}

<h1>Skill Details</h1>

<div>
    <h4>Skill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SkillId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SkillId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SkillTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SkillTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model?.SkillId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<div>
    <hr />
    <h4>Roles Requiring This Skill</h4>
    @*
    <p>
        <a asp-action="Create">New Role Link</a>
    </p>
    *@

    <table class="table">
        <thead>
            <tr>
                <th>
                    Role Id
                </th>
                <th>
                    Role Title
                </th>
                <th>
                    Description
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RolesWithThisSkill)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.RoleId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.RoleTitle)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.Description)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
<div>
    <hr />
    <h4>Persons With This Skill</h4>
    @*
    <p>
        <a asp-action="Create">New Person Link</a>
    </p>
    *@

    <table class="table">
        <thead>
            <tr>
                <th>
                    Person Id
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Type
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.PersonsWithThisSkill)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person.PersonId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person.FName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person.LName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Person.TypeCode)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

